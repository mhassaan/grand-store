<div class="form-row nested-fields" style="clear:both;">
	<div class="form-group col-md-4">
		<label for="inputEmail4" class="col-form-label">Name</label>
		<%= f.text_field :name, class:'form-control',placeholder: 'display name'%>
	</div>

	<div class="form-group col-md-4">
		<label for="inputEmail4" class="col-form-label">Display Name</label>
		<%= f.text_field :display_name, class:'form-control',placeholder: 'display name'%>
	</div>
	<div class="form-group col-md-4" style="margin-top:24px;">
		<%= link_to_remove_association "", f ,class: 'glyphicon glyphicon-trash btn btn-danger'%>
	</div>

</div>
