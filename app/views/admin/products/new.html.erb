<div class="wrapper">
		<!-- Sidebar Holder -->
		<%=render 'partials/admin_sidebar'%>
		<!-- Page Content Holder -->
		<div id="content">
			<%=render 'partials/admin_header'%>
			<div class="row">
				<div class="col-sm-4 col-md-6 col-xs-12">
					<p>Add a New Product</p>
				</div>
			</div>
			<% if flash.present?%>
				<div class="row">
					<div class="col-sm-4 col-md-6 col-xs-12">
						<% if flash[:notice] %>
							<p style="color:black;"><%=flash[:notice]%></p>
						<%elsif flash[:alert]%>
							<p><%=flash[:alert].html_safe%></p>
						<%end%>
					</div>
				</div>
			<%end%>
			<div class="line"></div>
			<%= form_for @product,html:{class:'form-class'} do |f| %>
				<div class="row">
					<div class="col-sm-12">
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputEmail4" class="col-form-label">Name</label>
									<%= f.text_field :name	, class:'form-control',placeholder: 'display name'%>
								</div>

								<div class="form-group col-md-6">
									<label for="inputEmail4" class="col-form-label">Master Price</label>
									<%= f.text_field :master_price	, class:'form-control',placeholder: 'display name'%>
								</div>
							</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputEmail4" class="col-form-label">Cost Price</label>
									<%= f.text_field :cost_price	, class:'form-control',placeholder: 'display name'%>
								</div>
								<div class="form-group col-md-6">
									<label for="inputEmail4" class="col-form-label">Variants</label>
										<%= f.select :sku,Option.all.collect{|v|[v.display_name,v.id]},{},{include_blank: true,class:'options-list',style:'width:100%;',multiple: 'multiple'}%>
								</div>
							</div>
					</div>
				</div>
				<%= hidden_field_tag 'product[option_ids]' %>
				<div class="row">
					<div class="col-sm-12">
						<div class="form-row">
							<div class="form-group col-md-6">
								<%= button_tag(type: 'submit', class: 'category-submit-btn btn btn-success') do %>
									<span><i class='glyphicon glyphicon-ok'></i>&nbsp;Create</span>
								<% end %>
							</div>
						</div>
					</div>
				</div>
				<!-- <button>
					Hide Parent Checkbox
					</button> -->
				<div class="row"> <div class="col-sm-4 col-md-6 col-xs-12"><div id="variant-container"></div></div></div>
			<%end%>
		</div>
</div>
